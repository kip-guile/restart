{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx", // enables the new JSX transform
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,

    "noEmit": true,
  },
  "include": ["src/client/**/*.ts", "src/client/**/*.tsx", "src/app/**/*.ts", "src/app/**/*.tsx", "src/shared/**/*.ts", "src/shared/**/*.tsx"]
}
