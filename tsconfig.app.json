{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist-types/app",

    "types": []
  },
  "include": ["src/app/**/*.ts", "src/app/**/*.tsx", "src/shared/**/*.ts", "src/shared/**/*.tsx"]
}